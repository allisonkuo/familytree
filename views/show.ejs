<%- include("partials/header") %>

<section class="header-container container">
    <div id="header" class="row">
        <div class="col-md-6">
            <h1 class="header-name">
                <%= person.name.toUpperCase() %>
            </h1>
            <p>Born in <%= person.born %>
            </p>
            <p>Hometown of <%= person.hometown %>
            </p>
        </div>
        <div class="col-md-6">
            <img class="img-responsive"
                src="<%= person.avatarSrc %>"
                alt="user profile image">
        </div>
    </div>
</section>

<section class="content-container container-fluid py-5">
    <div class="container">
        <% if (relatives[person.id].parents !==undefined && relatives[person.id].parents.length !==0) { %>
            <div>
                <h3>Parents</h4>
                <div class="row relatives-container">
                    <% relatives[person.id].parents.forEach((parent)=> { %>
                        <div class="col-md-4 col-lg-3 card">
                            <img class="card-img-top" src="<%= parent.avatarSrc %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= parent.name %>
                                </h5>
                                <a href="/family/<%= parent._id %>" class="stretched-link"></a>

                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>

        <% if (relatives[person.id].siblings !==undefined && relatives[person.id].siblings.length !==0) { %>
            <div>
                <h3>Siblings</h4>
                <div class="row relatives-container">
                    <% relatives[person.id].siblings.forEach((sib)=> { %>
                        <div class="col-md-3 card">
                            <img class="card-img-top" src="<%= sib.avatarSrc %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= sib.name %>
                                </h5>
                                <a href="/family/<%= sib._id %>" class="stretched-link"></a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>

        <% if (relatives[person.id].spouse !==undefined && relatives[person.id].spouse.length !==0) { %>
            <div>
                <h3>Spouse</h4>
                    <div class="row relatives-container">
                        <% relatives[person.id].spouse.forEach((spouse)=> { %>
                            <div class="col-md-3 card">
                                <img class="card-img-top" src="<%= spouse.avatarSrc %>" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= spouse.name %>
                                    </h5>
                                    <a href="/family/<%= spouse._id %>" class="stretched-link"></a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
            </div>
        <% } %>

        <% if (relatives[person.id].children !==undefined && relatives[person.id].children.length !==0) { %>
            <div>
                <h3>Children</h4>
                <div class="row relatives-container">
                    <% relatives[person.id].children.forEach((child)=> { %>
                        <div class="col-md-3 card">
                            <img class="card-img-top" src="<%= child.avatarSrc %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= child.name %>
                                </h5>
                                <a href="/family/<%= child._id %>" class="stretched-link"></a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>

    </div>
</section>

<%- include("partials/footer") %>